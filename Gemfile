# Use Thin for our web server
gem 'thin'

gem 'activerecord', '~> 3.2.0', :require => 'active_record'
gem 'activesupport', '~> 3.2.0', :require => 'active_support'
gem 'sinatra-activerecord'

gem 'rake'

gem 'shotgun'
gem 'tux'

gem 'erubis'

group :test do
  gem 'faker'
  gem 'rspec'
end